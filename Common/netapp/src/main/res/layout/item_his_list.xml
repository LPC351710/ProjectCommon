<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clickable="true"
    android:background="@drawable/main_item_selector">

    <ImageView
        android:id="@+id/img_event"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/light_black"
        android:textSize="@dimen/small_font_size"
        app:layout_constraintHorizontal_bias="0"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginEnd="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@id/img_event"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="测绘所沉思测试测绘所沉思测试" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/super_small_font_size"
        android:textColor="@color/light_gray"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/img_event"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constrainedWidth="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        tool:text="5555555555555"/>

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/middle_gray"
        android:textSize="@dimen/super_small_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/img_event"
        app:layout_constraintTop_toBottomOf="@+id/txt_time"
        app:layout_constrainedWidth="true"
        tool:text="测绘所沉思测绘所测绘所沉思测绘所测绘所沉思测绘所测绘所沉思测绘所测绘所沉思测绘所" />

</android.support.constraint.ConstraintLayout>